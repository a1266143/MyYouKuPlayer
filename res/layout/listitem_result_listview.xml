<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="horizontal" >
    
    <ImageView 
        android:id="@+id/listitem_result_listview_iv"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"/>
    
    <TextView 
        android:id="@+id/listitem_result_listview_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_alignBottom="@id/listitem_result_listview_iv"
        android:padding="2dp"
        android:textColor="#ffffff"/>
        
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/listitem_result_listview_iv"
        android:orientation="vertical">
        
        <TextView 
            android:id="@+id/listitem_result_listview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:padding="5dp"
            android:textSize="18sp"
            />
        
        <TextView 
            android:id="@+id/listitem_result_listview_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#aaaaaa"
            android:padding="5dp"
            android:textSize="14sp"
            />
        
        <TextView 
            android:id="@+id/listitem_result_listview_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#aaaaaa"
            android:maxLines="3"
            android:textSize="14sp"
            android:padding="5dp"/>
        
        <TextView 
            android:id="@+id/listitem_result_listview_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="#ff0000"
            android:textSize="17sp"/>
        
    </LinearLayout>

</RelativeLayout>